@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<div class="container log" id="registerContainer">

    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card log">
            <div class="card-header"><h3>Register</h3> Have an account <a href="#">sign in</a>.</div>
            <div class="card-body">
                <form method="post" asp-controller="Home" asp-action="Register">
                    <div class="form-group">
                        <label asp-for="UsernameRF">Username</label>
                        <input asp-for="UsernameRF" type="text" class="form-control" id="UsernameRF" placeholder="Enter username">
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordRF">Password</label>
                        <input asp-for="PasswordRF" type="password" class="form-control" id="PasswordRF" placeholder="Password">
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstnameRF">First Name</label>
                        <input asp-for="FirstnameRF" type="text" class="form-control" id="FirstnameRF" placeholder="Enter first name" />
                        <span asp-validation-for="FirstnameRF" class="label label-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastnameRF">Last Name</label>
                        <input asp-for="LastnameRF" type="text" class="form-control" id="LastnameRF" placeholder="Enter last name" />
                        <span asp-validation-for="LastnameRF" class="label label-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EmailRF">Email</label>
                        <input asp-for="EmailRF" type="email" class="form-control" id="EmailRF" placeholder="Enter email" />
                        <span asp-validation-for="EmailRF" class="label label-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageRF">Upload Image</label>
                        <input asp-for="ImageRF" type="file" class="form-control" id="ImageRF" placeholder="browse" />
                        <span asp-validation-for="ImageRF" class="label label-danger"></span>
                    </div>

                    <div class="col-sm-8"><button type="submit" class="btn btn-primary btn-sm btn-block">Regiser</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>

</div><!--end of container-->



